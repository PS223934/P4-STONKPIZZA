<Window x:Class="StonksPizza.windows.Bestellingen.BestellingenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StonksPizza.windows.Bestellingen"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="BestellingenWindow" Height="450" Width="800">
    <StackPanel>
        <ListBox MinHeight="300" ItemsSource="{Binding Bestellingen}" DisplayMemberPath="BestellingNaam" SelectedItem="{Binding SelectedBestelling}" Background="MintCream" VerticalAlignment="Bottom"/>
        <Button x:Name="BT_Add" MinHeight="40" Click="BT_Add_Click">Toevoegen</Button>
        <Button MinHeight="40">Edit</Button>
        <Button MinHeight="40">Verwijderen</Button>
    </StackPanel>
</Window>
